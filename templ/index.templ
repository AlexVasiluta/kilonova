{{template "util/header" . }}

<div class="container">
	<h1>Welcome to Kilonova {{.Version}}{{if .LoggedIn}}, {{.User.Name}}{{end}}!</h1>

	<div class="list-group">
		{{if not .LoggedIn}}
		<a href="/login" class="list-group-item list-group-item-action">Log in</a>
		<a href="/signup" class="list-group-item list-group-item-action">Sign up</a>
		{{else}}
		<a href="/logout" class="list-group-item list-group-item-action">Log out</a>
		{{ end }}
		<!--<a href="/probleme" class="list-group-item list-group-item-action">Listă probleme</a>-->
		{{if (or .User.Proposer .User.Admin)}}
		<a href="/probleme/create" class="list-group-item list-group-item-action">Creare problemă</a>
		{{ end }}
		<a href="/tasks" class="list-group-item list-group-item-action">Listă task-uri</a>
	</div>
	<br />
	{{ with .Problems }}
		<h1> Probleme </h1>
		<div class="list-group">
			{{ range . }}
				<a href="/probleme/{{.ID}}" class="list-group-item list-group-item-action">#{{.ID}}: {{.Name}}</a>
			{{ end }}
		</div>
	{{ end }} 
</div>
{{template "util/footer" . }}
